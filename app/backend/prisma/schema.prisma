// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Points {
  id              Int               @id @default(autoincrement())
  name            String            @unique @db.VarChar(200)
  xCoordinate     Int
  yCoordinate     Int
  parameter       Parameters[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  PointParameters PointParameters[]
}

model Parameters {
  id              Int               @id @default(autoincrement())
  parameter       String            @db.VarChar(200)
  unity           String
  limit           Float
  point           Points            @relation(fields: [id], references: [id])
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  PointParameters PointParameters[]
}

model PointParameters {
  id          Int        @id @default(autoincrement())
  point       Points     @relation(fields: [parameterId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  pointId     Int
  parameter   Parameters @relation(fields: [pointId], references: [id])
  parameterId Int
  value       Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now())
}
